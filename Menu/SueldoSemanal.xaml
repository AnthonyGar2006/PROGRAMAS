<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu.SueldoSemanal"
             Title="SueldoSemanal">
    <VerticalStackLayout>

        <Entry x:Name="Horas" Placeholder="Horas trabajadas" Keyboard="Numeric"/>
        <Entry x:Name="Pago" Placeholder="Pago samanal" Keyboard="Numeric"/>
        <Button Text="Calcular" Clicked="Button_Clicked"/>
        <Label x:Name="Resultado" FontSize="18" HorizontalOptions="Center"/>


    </VerticalStackLayout>

</ContentPage>
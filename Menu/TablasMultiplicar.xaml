<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu.TablasMultiplicar"
             Title="TablasMultiplicar">

    <ContentPage.Resources>
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="Margin" Value="20" />
            <Setter Property="HeightRequest" Value="40" />



        </Style>

    </ContentPage.Resources>

    <StackLayout Padding="20">
        <Entry x:Name="Numeros"
         Placeholder="Introduce el numero" Keyboard="Numeric" Style="{StaticResource EntryStyle}" TextChanged="Numeros_TextChanged"/>
        <Label x:Name="Resultado" Text="" FontSize="Medium" Margin="20"/>

    </StackLayout>
</ContentPage>